<ul>
<!-- mapping through each model (list, item) for the board -->
  {{#each model as |list|}}
    {{trello-list
      list=list
      modalActive=modalActive
      newItem=newItem
      selectItem='selectItem'
      createItem='createItem'}}
  {{/each}}

  {{create-list newList=model createList='createList'}}

</ul>
<!-- if the modal is active, show detail view, have toggle modal option etc -->
{{#if modalActive}}

  {{details-view
    selectedItem=selectedItem
    newItem=newItem
    toggleModal='toggleModal'
    deleteItem='deleteItem'}}

{{/if}}