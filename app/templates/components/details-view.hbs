<!-- https://v4-alpha.getbootstrap.com/components/modal/ -->
<div id='details-view'>
  <div {{action 'toggleModal'}} class='modal-fade'></div>
    <div class='panel panel-info modal-box'>
      <div class='panel-heading modal-title'>
        <div class='pull-left'>
          {{#if editName}}
          <!-- if editing name, have form and input available -->
            <form {{action 'editItemName' newItem selectedItem.id on='submit'}}
              id='newTitle'>
              {{input class='name-change form-control' value=newItem.name placeholder='Item name'}}
              </form>
          {{else}}
          <!-- otherwise, toggle edit function -->
            <span {{action 'toggleEdit' 'name'}}>{{selectedItem.name}}</span>
          {{/if}}
        </div>
        <div class='pull-right'>
          <span {{action 'deleteItem' selectedItem}} class='button'>Delete</span>
          <span {{action 'toggleModal' selectedItem}} class='button'>Close</span>
        </div>
      </div>

    <div class='panel-body modal-body'>
      <p><i>Click the name or description to edit</i></p>
      <!-- if description is being edited, have form for submit and input available -->
      {{#if editDescription}}
        <form {{action 'editItemDescription' newItem selectedItem.id on='submit'}}>
          {{input class='form-control' value=newItem.description placeholder='Enter item description here.'}}
        </form>
      {{else}}
      <!-- otherwise, toggle the edit option in modal's description -->
        <span {{action 'toggleEdit' 'description'}}>{{selectedItem.description}}</span>
      {{/if}}
    </div>
  </div>

</div>